---
const nav = [
  { href: '/', label: 'Услуги' },
  { href: '/cargo/', label: 'Грузоперевозки' },
  { href: '/wholesale-china/', label: 'Опт из Китая' },
  { href: '/for-client/', label: 'Клиенту' },
  { href: '/about/', label: 'О нас' },
  { href: '/contacts/', label: 'Контакты' },
];
---
<header class="border-b border-border/60 bg-white/80 backdrop-blur supports-[backdrop-filter]:bg-white/60">
  <div class="container mx-auto flex items-center justify-between py-3">
    <a href="/" class="flex items-center gap-3">
      <img src="/logo.png" alt="Cargo24Express" class="h-8 w-auto" />
      <span class="font-display font-bold text-xl text-ink-900">Cargo24Express</span>
    </a>
    <nav class="hidden md:flex gap-6 text-[15px]">
      {nav.map(i => <a class="hover:text-brand-600 transition" href={i.href}>{i.label}</a>)}
    </nav>
    <a href="/calculator/" class="hidden md:inline-flex items-center px-4 py-2 rounded-xl bg-brand-600 text-white shadow-glow hover:bg-brand-500 transition">Рассчитать</a>
  </div>
</header>
