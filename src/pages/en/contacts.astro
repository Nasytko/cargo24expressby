---
import Base from '@/layouts/Base.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
const title = {"ru":"Контакты","en":"Contacts","zh":"联系方式"}["en"];
---
<Base lang="en" title={{title}} description="Свяжитесь с нами">
  <Header />
  <main class="container py-10">
    <h1 class="font-display text-3xl mb-6">{{title}}</h1>
    <div class="grid md:grid-cols-2 gap-6">
      <div class="p-6 rounded-2xl border border-border">
        <div class="space-y-2 text-[15px]">
          <div>Телефон: <a class="text-brand-600" href="tel:+375292395299">+375 (29) 239‑52‑99</a></div>
          <div>Email: <a class="text-brand-600" href="mailto:info@cargo24express.by">info@cargo24express.by</a></div>
          <div>Instagram: <a class="text-brand-600" href="https://www.instagram.com/cargo.24express/">@cargo.24express</a></div>
          <div>Адрес: г. Гродно, ул. Школьная, д. 4</div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Base>
